@model GrandmothersDishes.Web.ViewModels.Account.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<h1 class="text-center p-3 font-weight-bold" style="color: goldenrod">Register</h1>
<h3 class="text-center font-weight-bold" style="color: goldenrod">Create new account</h3>
<hr class="w-25" />
<form asp-controller="Account" asp-action="Register" class="mx-auto w-25" method="post">

    <div asp-validation-summary="All" class="text-danger"></div>
  
    <div class="form-group text-center">
        <label asp-for="Username">Username</label>
        <input asp-for="Username" class="form-control" placeholder="Username...">
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-group text-center">
        <label asp-for="Password">Password</label>
        <input asp-for="Password" class="form-control" placeholder="Password...">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group text-center">
        <label asp-for="ConfirmPassword">Confirm Password</label>
        <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm Password...">
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="form-group text-center">
        <label asp-for="City">City</label>
        <input asp-for="City" class="form-control" placeholder="City...">
        <span asp-validation-for="City" class="text-danger"></span>
    </div>
    <div class="form-group text-center">
        <label asp-for="HomeAddress">Home Address</label>
        <input asp-for="HomeAddress" class="form-control" placeholder="HomeAddress...">
        <span asp-validation-for="HomeAddress" class="text-danger"></span>

    </div>
    <div class="form-group text-center">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" placeholder="Email...">
        <span asp-validation-for="Email" class="text-danger"></span>

    </div>
    <div class="button-holder d-flex justify-content-center p-3">
        <button type="submit" class="btn" style="background: goldenrod;color:white">Register</button>
    </div>

</form>

