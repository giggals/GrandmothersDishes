@model GrandmothersDishes.Services.GrandmothersDishes.ViewModels.Drinks.AllDrinksViewModel



<h1 class="text-center mt-2" style="color: goldenrod">Drinks</h1>

<h3 class="text-center mt-2" style="color: goldenrod">Best drinks you can order in Grandmother's Dishes restaurant!</h3>


<div class="container mt-4">

    <div class="row">

        @foreach (var item in Model.Drinks)
        {
            <div class="col-lg-4 col-sm-6 portfolio-item mb-3">
                <div class="card h-100">
                    <a asp-area="" asp-controller="Drinks" asp-action="Details" asp-route-id="@item.Id"><img class="card-img-top" src="@item.ImageUrl" alt="@item.Name"></a>
                    <div class="card-body">
                        <h4 class="card-title">
                            <a asp-area="" asp-controller="Drinks" asp-action="Details" asp-route-id="@item.Id">@item.Name @item.Price$</a>
                        </h4>
                        <p class="card-text">@item.Description</p>
                    </div>
                </div>
            </div>
        }

    </div>
</div>

