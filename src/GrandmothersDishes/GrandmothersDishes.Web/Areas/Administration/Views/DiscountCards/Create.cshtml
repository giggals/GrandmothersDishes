@using GrandmothersDishes.Models.Enums
@model GrandmothersDishes.Services.GrandmothersDishes.ViewModels.DiscountCards.CreateCardViewModel
@{
    ViewData["Title"] = "Create";
}

<h2 class="text-center mt-4" style="color:goldenrod">Create</h2>

<hr class="bg-dark w-50" />
<form class="mx-auto w-50" method="post" asp-area="Administration" asp-controller="DiscountCards" asp-action="Create">

    <div class="channel-type-holder mt-4 d-flex justify-content-around">
        <div class="form-group text-center w-50">
            <label asp-for="DiscountPercentage"><strong>Discount Percentage</strong></label>
            <input asp-for="DiscountPercentage" type="number" step="any" placeholder="Discount Percentage..." class="form-control" name="DiscountPercentage">
            <span asp-validation-for="DiscountPercentage" class="text-danger"></span>
        </div>
    </div>

    <div class="channel-type-holder mt-4 d-flex justify-content-around">
        <div class="form-group text-center w-50">
            <label asp-for="ImageUrl"><strong>Image URl</strong></label>
            <input asp-for="ImageUrl" placeholder="Image URL..." class="form-control" name="ImageUrl">
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Description"><strong>Description</strong></label>
        <textarea asp-for="Description" class="form-control" id="description" rows="4" placeholder="Description..." name="description"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="channel-type-holder mt-4 d-flex justify-content-around">
        <div class="form-group text-center w-50">
            <label asp-for="DiscountType"><strong>Discount Type</strong></label>
            <select asp-for="DiscountType" class="form-control" id="DiscountType" name="DiscountType">
                <option selected disabled="disabled">Select a type..</option>
                @foreach (var item in Enum.GetValues(typeof(DiscountType)))
                {
                    <option>@item</option>

                }

            </select>
            <span asp-validation-for="DiscountType" class="text-danger"></span>
        </div>
    </div>

    <hr class="bg-dark" />
    <div class="button-holder mt-4 d-flex justify-content-center mb-3">
        <button type="submit" class="btn" style="background: goldenrod;color: white">Create Card</button>
    </div>
</form>