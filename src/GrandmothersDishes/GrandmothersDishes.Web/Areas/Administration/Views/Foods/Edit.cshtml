@using GrandmothersDishes.Models.Enums
@model GrandmothersDishes.Services.GrandmothersDishes.ViewModels.Foods.UpdateDeleteViewModel

<h1 class="text-center text-torshia mt-3">Edit Dish</h1>
<hr class="bg-dark w-50" />
<form class="mx-auto w-50" method="post" asp-area="Administration" asp-controller="Foods" asp-action="Edit">
    <div class="row d-flex justify-content-between ">
        <div class="form-group col-md-5">
            <label for="name" ><strong>Name</strong></label>
            <input type="text" class="form-control" value="@Model.Name" id="name"  name="name">
        </div>
        <div class="form-group col-md-5">
            <label for="calories" class="text-torshia"><strong>Calories</strong></label>
            <input type="number" step="0.01" min="0" max="9999999" class="form-control" id="calories" value="@Model.Calories" name="calories">
        </div>
    </div>
    <div class="row d-flex justify-content-between">

        <div class="form-group col-md-5">
            <label for="price" ><strong>Price</strong></label>
            <input type="number" step="0.01" min="0" max="9999999" class="form-control" id="price" value="@Model.Price" name="price">
        </div>
        <div class="form-group col-md-5">
            <label for="ImageUrl"><strong>Image Url</strong></label>
            <input type="text" class="form-control" id="imageUrl" value="@Model.ImageUrl" placeholder="Image Url..." name="imageUrl">
        </div>
    </div>
    <div class="form-group">
        <label for="ImageUrl" ><strong>Description</strong></label>
        <textarea class="form-control" id="description" rows="4"  name="description">@Model.Description</textarea>
    </div>
    <div class="channel-type-holder mt-4 d-flex justify-content-around">
        <div class="form-group text-center w-50">
            <label for="Recipient"><strong>Dish Type</strong></label>
            <select class="form-control" id="DishType" name="DishType">
                <option  selected="selected" value="@Model.DishType">@Model.DishType</option>
                @foreach (var item in Enum.GetValues(typeof(DishType)))
                {
                    <option>@item</option>

                }

            </select>
        </div>
    </div>

    <hr class="bg-dark" />
    <div class="button-holder mt-4 d-flex justify-content-center mb-3">
        <button type="submit" class="btn bg-dark text-white">Edit</button>
    </div>
</form>