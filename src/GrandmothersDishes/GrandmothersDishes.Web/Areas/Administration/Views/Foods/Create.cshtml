@using GrandmothersDishes.Models.Enums

<h1 class="text-center text-torshia mt-3">Create Dish</h1>
<hr class="bg-dark w-50" />
<form class="mx-auto w-50" method="post" asp-area="Administration" asp-controller="Foods" asp-action="Create">
    <div class="row d-flex justify-content-between ">
        <div class="form-group col-md-5">
            <label for="name" class="text-torshia"><strong>Name</strong></label>
            <input type="text" class="form-control" id="name" placeholder="Name..." name="name">
        </div>
        <div class="form-group col-md-5">
            <label for="calories" class="text-torshia"><strong>Calories</strong></label>
            <input type="number" step="0.01" min="0" max="9999999" class="form-control" id="calories" placeholder="Calories..." name="calories">
        </div>
    </div>
    <div class="row d-flex justify-content-between">

        <div class="form-group col-md-5">
            <label for="price" class="text-panda"><strong>Price</strong></label>
            <input type="number" step="0.01" min="0" max="9999999" class="form-control" id="price" placeholder="Price..." name="price">
        </div>
        <div class="form-group col-md-5">
            <label for="ImageUrl" class="text-panda"><strong>Image Url</strong></label>
            <input type="text" class="form-control" id="imageUrl" placeholder="Image Url..." name="imageUrl">
        </div>
    </div>
    <div class="form-group">
        <label for="ImageUrl" class="text-panda"><strong>Description</strong></label>
        <textarea class="form-control" id="description" rows="4" placeholder="Description..." name="description"></textarea>
    </div>
    <div class="channel-type-holder mt-4 d-flex justify-content-around">
        <div class="form-group text-center w-50">
            <label  for="Recipient"><strong>Dish Type</strong></label>
            <select class="form-control" id="DishType" name="DishType">
                <option selected disabled="disabled">Select a type..</option>
                @foreach (var item in Enum.GetValues(typeof(DishType)))
                {
                    <option>@item</option>
                  
                }
                
            </select>
        </div>
    </div>

    <hr class="bg-dark"/>
    <div class="button-holder mt-4 d-flex justify-content-center mb-3">
        <button type="submit" class="btn bg-dark text-white">Create</button>
    </div>
</form>