@using GrandmothersDishes.Models.Enums
@model GrandmothersDishes.Services.GrandmothersDishes.ViewModels.Employees.CreateEmployeeViewModel
@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center mt-2" style="color: goldenrod">Add Employee</h1>


<form class="mx-auto w-50" method="post" asp-area="Administration" asp-controller="Employees" asp-action="Create">

    <div class="row d-flex justify-content-between ">
        <div class="form-group col-md-5">
            <label asp-for="FirstName"><strong>First Name</strong></label>
            <input asp-for="FirstName" placeholder="First Name..." class="form-control" name="firstName">
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group col-md-5">
            <label asp-for="LastName"><strong>Last Name</strong></label>
            <input asp-for="LastName" class="form-control" placeholder="Last Name..." name="lastName">
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>
    <div class="row d-flex justify-content-between">

        <div class="form-group col-md-5">
            <label asp-for="Salary"><strong>Salary</strong></label>
            <input asp-for="Salary" type="number" step="any" class="form-control" placeholder="Salary..." name="salary">
            <span asp-validation-for="Salary" class="text-danger"></span>
        </div>
        <div class="form-group col-md-5">
            <label asp-for="ImageUrl"><strong>Image Url</strong></label>
            <input asp-for="ImageUrl" class="form-control" id="imageUrl" placeholder="Image Url..." name="imageUrl">
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="WorkingHours"><strong>Working Hours</strong></label>
        <input asp-for="WorkingHours" type="number" class="form-control" id="imageUrl" placeholder="Working Hours..." name="workingHours">
        <span asp-validation-for="WorkingHours" class="text-danger"></span>
    </div>
    <div class="channel-type-holder mt-4 d-flex justify-content-around">
        <div class="form-group text-center w-50">
            <label asp-for="Gender"><strong>Gender</strong></label>
            <select asp-for="Gender" class="form-control" id="Gender" name="Gender">
                <option selected disabled="disabled">Select a type..</option>
                @foreach (var item in Enum.GetValues(typeof(Gender)))
                {
                    <option>@item</option>

                }

            </select>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
    </div>
    <div class="channel-type-holder mt-4 d-flex justify-content-around">
        <div class="form-group text-center w-50">
            <label asp-for="EmployeeType"><strong>Employee Type</strong></label>
            <select asp-for="EmployeeType" class="form-control" id="EmployeeType" name="EmployeeType">
                <option selected disabled="disabled">Select a type..</option>
                @foreach (var item in Enum.GetValues(typeof(EmployeeType)))
                {
                    <option>@item</option>

                }

            </select>
            <span asp-validation-for="EmployeeType" class="text-danger"></span>
        </div>
    </div>

    <hr class="bg-dark" />
    <div class="button-holder mt-4 d-flex justify-content-center mb-3">
        <button type="submit" class="btn" style="background: goldenrod;color: white">Add Employee</button>
    </div>
</form>

