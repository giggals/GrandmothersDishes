@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1 class="text-center p-3">Register</h1>
<hr class="w-25" />


<form asp-route-returnUrl="@Model.ReturnUrl" class="mx-auto w-25" method="post">
    <div class="form-group text-center">
        <label asp-for="Input.Username">Username</label>
        <input asp-for="Input.Username" class="form-control" placeholder="Username...">
    </div>
    <div class="form-group text-center">
        <label asp-for="Input.Password">Password</label>
        <input asp-for="Input.Password" class="form-control" placeholder="Password...">
    </div>
    <div class="form-group text-center">
        <label asp-for="Input.ConfirmPassword">Confirm Password</label>
        <input asp-for="Input.ConfirmPassword" class="form-control" type="password" placeholder="Confirm Password...">
    </div>
    <div class="form-group text-center">
        <label asp-for="Input.City">City</label>
        <input asp-for="Input.City" class="form-control" placeholder="City...">
    </div>
    <div class="form-group text-center">
        <label asp-for="Input.HomeAddress">Home Address</label>
        <input asp-for="Input.HomeAddress" class="form-control" placeholder="HomeAddress...">
    </div>
    <div class="form-group text-center">
        <label asp-for="Input.Email">Email</label>
        <input asp-for="Input.Email" class="form-control" placeholder="Email...">
    </div>
    <div class="button-holder d-flex justify-content-center p-3">
        <button type="submit" class="btn bg-dark" style="color: aliceblue">Register</button>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
